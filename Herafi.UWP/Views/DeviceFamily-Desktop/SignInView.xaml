                                    <ComboBox x:Name="comBoxFBCities"
                                              SelectedIndex="0"
                                              Background="Transparent"
                                              Width="160"
                                              DisplayMemberPath="Name"
                                              Height="40"
                                              BorderThickness="2"
                                              CornerRadius="8"
                                              ItemsSource="{Binding Cities}">

                                    </ComboBox>
                                </Grid>

                            </StackPanel>

                        </Grid>
                    </PivotItem>
                    <!--endregion-->

                    <!--#region Verify Account-->
                    <PivotItem Margin="0 -48 0 0">
                        <Grid>
                            <!--Verification title-->
                            <TextBlock x:Name="txtVerifyTitle"
                                       Text="Verification Account"
                                       Style="{StaticResource SubheaderTextBlockStyle}"
                                       HorizontalAlignment="Center"
                                       Margin="0 24 0 0"/>

                            <!--code textbox and send button-->
                            <StackPanel HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Margin="0 102 0 0"
                                        Orientation="Vertical"
                                        Padding="24 0">

                                <!--Verify process description-->
                                <StackPanel Orientation="Horizontal">
                                    <Image Stretch="None" 
                                           Source="{StaticResource Information}"
                                           VerticalAlignment="Top"/>
                                    <TextBlock x:Name="txtVerifyDesc" 
                                               Margin="12 0 0 0"
                                               TextWrapping="Wrap"
                                               Text="We send an email to you it has a code, please enter it inside text box"
                                               Width="338"
                                               Height="40"/>
                                </StackPanel>

                                <!--Code textbox-->
                                <StackPanel Orientation="Vertical"
                                            Margin="0 56 0 0">

                                    <TextBlock x:Name="txtBoxVerifyNameErr"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Margin="12 0 0 2"
                                               Text="You have an error in your code"
                                               Foreground="{ThemeResource ErrorInAppNotificationBorderBrush}"
                                               Opacity="0"/>

                                    <TextBox x:Name="txtBoxVerifyCode"
                                         Width="369"
                                         Height="40"
                                         Background="Transparent"
                                         BorderThickness="2"
                                         CornerRadius="8"
                                         InputScope="Text"
                                         PlaceholderText="Code" 
                                         IsColorFontEnabled="False"
                                         Padding="12 8 0 0"/>

                                </StackPanel>

                                <!--Send button-->
                                <Button x:Name="btnVerifySend"
                                        HorizontalAlignment="Center"
                                        Width="100"
                                        Height="40"
                                        Style="{StaticResource NormalButton}"
                                        Margin="0 86 0 0">

                                    <Button.Content>
                                        <TextBlock x:Name="txtVerifySendCont" Text="Send"
                                                   Style="{StaticResource SubtitleAltTextBlockStyle}"
                                                   Foreground="{ThemeResource InsideBtnTextBlockForegroundBrush}"/>
                                    </Button.Content>
                                </Button>
                            </StackPanel>
                            
                        </Grid>
                    </PivotItem>
                    <!--endregion-->

                    <!--#region Choose Your Photos pivot-->
                    <PivotItem Margin="0 -48 0 0">
                        <Grid>
                            <TextBlock x:Name="txtChoPicTitle"
                                       Text="Choose Your Photos"
                                       Style="{StaticResource SubheaderTextBlockStyle}"
                                       HorizontalAlignment="Center"
                                       Margin="0 24 0 0"/>

                            <!--Contains on imageEx for Personal Photo and identity photo-->
                            <StackPanel HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Margin="0 86 0 0"
                                        Orientation="Vertical"
                                        Padding="24 0">

                                <!--Choosing peronsal picture and personal identity description-->
                                <StackPanel Orientation="Horizontal">
                                    <Image Stretch="None" 
                                           Source="{StaticResource Information}"
                                           VerticalAlignment="Top"/>
                                    <TextBlock x:Name="txtChoPicDesc" 
                                               Margin="12 0 0 0"
                                               TextWrapping="Wrap"
                                               Text="Choose a picture for you and a picture for your personal identity"
                                               Height="40"
                                               Width="338"/>
                                </StackPanel>

                                <!--ImageEx Personal picture-->
                                <Grid Width="140"
                                      Height="140"
                                      Margin="0 12 0 0">
                                    <cont:DropShadowPanel Style="{StaticResource CardShadow}">
                                        <Ellipse Width="140"
                                                 Height="140"
                                                 Style="{StaticResource NormalRoundedCard}">

                                        </Ellipse>
                                    </cont:DropShadowPanel>

                                    <Image HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Source="{StaticResource Admin}"
                                           Stretch="Fill"
                                           Width="100"
                                           Height="100"/>

                                    <cont:ImageEx x:Name="imgExProfile"
                                                  Stretch="Fill"
                                                  CornerRadius="200"
                                           Width="140"
                                           Height="140"/>

                                    <Grid x:Name="btnChoPicProfile"
                                            Width="40"
                                            Height="40"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            Margin="94 0 0 0"
                                            CornerRadius="24"
                                          ext:FrameworkElementExtensions.Cursor="Hand">
                                        <Grid.Background>
                                            <SolidColorBrush Color="Gray" Opacity="0.2"/>
                                        </Grid.Background>

                                        <PathIcon Style="{StaticResource NormalPathIcon}" HorizontalAlignment="Center"
                                                      Data="{StaticResource ChoosePicture}"
                                                      Opacity="0.8"/>
                                    </Grid>
                                </Grid>

                                <!--ImageEx identity picture-->
                                <Grid Width="300"
                                      Height="140"
                                      Margin="0 40 0 0">
                                    <cont:DropShadowPanel Style="{StaticResource CardShadow}">
                                        <Rectangle Width="300"
                                                   Height="140"
                                                   Style="{StaticResource NormalCard}">

                                        </Rectangle>
                                    </cont:DropShadowPanel>

                                    <Image HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Source="{StaticResource PersonalIdentity}"
                                           Stretch="Fill"
                                           Width="124"
                                           Height="124"/>

                                    <cont:ImageEx x:Name="imgExPersIdentity"
                                                  Stretch="Fill"
                                                  CornerRadius="{StaticResource SmallCornerRadius}"
                                           Width="300"
                                           Height="140"/>

                                    <Grid x:Name="btnChoPicPersIdentity"
                                            Width="40"
                                            Height="40"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Bottom"
                                            Margin="20,0,0,-20"
                                            CornerRadius="24"
                                            ext:FrameworkElementExtensions.Cursor="Hand">
                                        <Grid.Background>
                                            <SolidColorBrush Color="Gray" Opacity="0.2"/>
                                        </Grid.Background>

                                        <PathIcon Style="{StaticResource NormalPathIcon}" HorizontalAlignment="Center"
                                                      Data="{StaticResource ChoosePicture}"
                                                      Opacity="0.8"/>
                                    </Grid>
                                </Grid>

                                <!--Button Continue to main view-->
                                <Button x:Name="btnChPicContinue"
                                        HorizontalAlignment="Right"
                                        Width="100"
                                        Height="40"
                                        Style="{StaticResource NormalButton}"
                                         Margin="0 40 5 29">

                                    <Button.Content>
                                        <TextBlock x:Name="txtChPicContinueCont" Text="Continue"
                                                   Style="{StaticResource SubtitleAltTextBlockStyle}"
                                                   Foreground="{ThemeResource InsideBtnTextBlockForegroundBrush}"/>
                                    </Button.Content>

                                    <Button.Flyout>
                                        <Flyout Placement="Top" x:Name="flyoutContinue">
                                            <StackPanel>
                                                <TextBlock x:Name="flyoutContinueHeader" Text="Befor we finish" Style="{StaticResource BodyTextBlockStyle}" FontWeight="Bold"/>
                                                <TextBlock x:Name="flyoutContinueContent" Text="Do you want to be always sign in when get to you app?" Margin="0 4 0 0" Style="{StaticResource BodyTextBlockStyle}"/>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">

                                                    <!--No Button to Continue to main view-->
                                                    <Button x:Name="btnChPicNoContinue" 
                                                            Width="60"
                                                            Height="32"
                                                            Style="{StaticResource MicrosoftFacebookButton}"
                                                            Margin="0 0 16 0">
                                                        <Button.Content>
                                                            <TextBlock x:Name="txtChPicNoContinueCont" Text="No" Margin="0 -2 0 0"
                                                                       HorizontalAlignment="Center"
                                                                       Style="{StaticResource BodyTextBlockStyle}"
                                                                       Foreground="{ThemeResource NormalTextBlockForegroundBrush}"/>
                                                        </Button.Content>
                                                    </Button>
                                                    
                                                    <!--Yes Button to Continue to main view-->
                                                    <Button x:Name="btnChPicYesContinue" 
                                                            Width="60"
                                                            Height="32"
                                                            Style="{StaticResource NormalButton}">
                                                        <Button.Content>
                                                            <TextBlock x:Name="txtChPicYesContinueCont" Text="Yes" HorizontalAlignment="Center" 
                                                                       Style="{StaticResource BodyTextBlockStyle}"
                                                                       Foreground="{ThemeResource InsideBtnTextBlockForegroundBrush}"/>
                                                        </Button.Content>
                                                    </Button>

                                                </StackPanel>
                                            </StackPanel>
                                        </Flyout>
                                    </Button.Flyout>
                                </Button>
                                
                            </StackPanel>

                           
                        </Grid>
                    </PivotItem>
                    <!--#endregion-->

                </Pivot>

                <!--Error Toast Notifcation-->
                <cont:InAppNotification x:Name="errorToastNotification"
                                    Style="{StaticResource ErrorInAppNotificationStyle}"
                                    Margin="0 0 0 8"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom">
                    <cont:InAppNotification.Content>
                        <StackPanel VerticalAlignment="Stretch"
                                    HorizontalAlignment="Stretch"
                                    Orientation="Horizontal">

                            <PathIcon x:Name="errorToastNotificationIcon"
                                      Data="{StaticResource ToastNotification}"
                                      Style="{StaticResource ErrorToastNotificationPathIcon}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"/>

                            <TextBlock x:Name="errorToastNotificationMessage"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="8 0 0 0"
                                       Foreground="{ThemeResource ErrorTextBlockForegroundBrush}"/>
                        </StackPanel>
                    </cont:InAppNotification.Content>
                </cont:InAppNotification>

                <!--Toast Notifcation-->
                <cont:InAppNotification x:Name="fixedToastNotification"
                                    Style="{StaticResource FixedInAppNotificationStyle}"
                                    Margin="0 0 0 8"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom">
                    <cont:InAppNotification.Content>
                        <StackPanel VerticalAlignment="Stretch"
                                    HorizontalAlignment="Stretch"
                                    Orientation="Horizontal">

                            <PathIcon x:Name="fixedToastNotificationIcon"
                                      Data="{StaticResource ToastNotification}"
                                      Style="{StaticResource FixedToastNotificationPathIcon}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"/>

                            <TextBlock x:Name="fixedToastNotificationMessage"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="8 0 0 0"
                                       Foreground="{ThemeResource FixedTextBlockForegroundBrush}"/>
                        </StackPanel>
                    </cont:InAppNotification.Content>
                </cont:InAppNotification>

            </Grid>

        </Grid>

        <!--card view for asking the user if he ensure to close app-->
        <mat:CardView Style="{StaticResource CardViewStyle}" 
                      x:Name="exitAppCardView" 
                      Header="Exit"
                      Grid.Column="2"
                      IsOpen="False"
                      ContentHeight="180"
                      ContentWidth="400">
            <mat:CardView.Content>
                <StackPanel>
                    <TextBlock x:Name="exitAppCardViewMessage" Margin="0 0 0 0" TextWrapping="Wrap"
                               Text="Are you sure that you want to exit from your app?"/>
                </StackPanel>
            </mat:CardView.Content>

            <mat:CardView.Footer>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                            Margin="8">

                    <Button x:Name="btnCaViAppCancel"
                            Style="{StaticResource MicrosoftFacebookButton}"
                            Height="40"
                            Width="90"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch">
                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" x:Name="txtCaViExiAppCancel" Text="Cancel"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>

                    <Button x:Name="btnCaViAppOk"
                            Style="{StaticResource NormalButton}"
                            Height="40"
                            Width="90"
                            Margin="16 0 0 0"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch">
                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" x:Name="txtCaViExiAppOk" Text="OK"
                                   Foreground="{ThemeResource InsideBtnTextBlockForegroundBrush}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                    
                    
                </StackPanel>
            </mat:CardView.Footer>

        </mat:CardView>

    </Grid>
</Page>
