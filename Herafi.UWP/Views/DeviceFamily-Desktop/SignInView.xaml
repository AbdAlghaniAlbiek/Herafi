                                               Opacity="0"/>

                                    <PasswordBox x:Name="txtBoxFbPassword"
                                                 Password="helloworld2"
                                                 Background="Transparent"
                                                 Width="369"
                                                 Height="40"
                                                 BorderThickness="2"
                                                 CornerRadius="8"
                                                 InputScope="Text"
                                                 PlaceholderText="Password" 
                                                 Padding="12 8 0 0"/>

                                </StackPanel>

                                <!--Phone number textbox-->
                                <StackPanel Orientation="Vertical" Margin="0 14 0 0">

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock x:Name="txtFbPhonNumErr"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Margin="12 0 0 2"
                                               Text="Incorrect Phone Number format (eg: +945 0996563512)"
                                               Foreground="{ThemeResource ErrorTextBlockForegroundBrush}"
                                               Visibility="Collapsed"/>

                                        <TextBlock Text="Hello" Margin="4 0 0 2" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0"/>
                                    </StackPanel>



                                    <TextBox x:Name="txtBoxFbPhonNum"
                                             Text="0998865425"
                                             Background="Transparent"
                                             Width="369"
                                             Height="40"
                                             BorderThickness="2"
                                             CornerRadius="8"
                                             InputScope="Text"
                                             PlaceholderText="Phone number" 
                                             IsColorFontEnabled="False"
                                             Padding="12 8 0 0"/>

                                </StackPanel>

                                <!--National number textbox-->
                                <StackPanel Orientation="Vertical" Margin="0 14 0 0">

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock x:Name="txtFbNatNumErr"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Margin="12 0 0 2"
                                               Text="Incorrect National number format (only numbers eg: 02060589756)"
                                               Foreground="{ThemeResource ErrorTextBlockForegroundBrush}"
                                               Visibility="Collapsed"/>

                                        <TextBlock Text="Hello" Margin="4 0 0 2" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0"/>
                                    </StackPanel>
                                    
                                   

                                    <TextBox x:Name="txtBoxFbNatNum"
                                             Text="02050878936"
                                             Background="Transparent"
                                         Width="369"
                                         Height="40"
                                         BorderThickness="2"
                                         CornerRadius="8"
                                         InputScope="Text"
                                         PlaceholderText="National number" 
                                         IsColorFontEnabled="False"
                                         Padding="12 8 0 0"/>
