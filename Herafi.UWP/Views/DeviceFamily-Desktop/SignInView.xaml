                                    <Button x:Name="btnFbSubm"
                                            Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        Width="100"
                                        Height="40"
                                            Style="{StaticResource NormalButton}"
                                        Margin="0 0 5 29">
                                        <Button.Background>
                                            <SolidColorBrush Color="{StaticResource SystemAccentColor}"/>
                                        </Button.Background>

                                        <Button.Content>
                                            <TextBlock x:Name="txtFbSubmCont" Text="Submit"
                                                   Style="{StaticResource SubtitleAltTextBlockStyle}"
                                                   Foreground="{ThemeResource InsideBtnTextBlockForegroundBrush}"/>
                                        </Button.Content>
                                    </Button>

