                                             Padding="12 8 0 0"/>

                                </StackPanel>

                                <!--Email textbox-->
                                <StackPanel Orientation="Vertical" Margin="0 14 0 0">


                                    <StackPanel Orientation="Horizontal">

                                        <TextBlock x:Name="txtFbEmailErr"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Margin="12 0 0 2"
                                               Text="Incorrect Email format (eg: example@gmail.com)"
                                               Foreground="{ThemeResource ErrorTextBlockForegroundBrush}"
                                               Visibility="Collapsed"/>

                                        <TextBlock Text="Hello" Margin="4 0 0 2" Style="{StaticResource CaptionTextBlockStyle}" Opacity="0"/>
                                    </StackPanel>


                                    <TextBox x:Name="txtBoxFbEmail"
                                             Text="abdalghanialbiek@gmail.com"
                                             Background="Transparent"
                                             Width="369"
                                             Height="40"
                                             BorderThickness="2"
                                             CornerRadius="8"
                                             InputScope="Text"
                                             PlaceholderText="Email" 
                                             IsColorFontEnabled="False"
                                             Padding="12 8 0 0"/>

                                </StackPanel>

                                <!--Password textbox-->
                                <StackPanel Orientation="Vertical" Margin="0 14 0 0">

                                    <TextBlock x:Name="txtFbPasswordErr"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Margin="12 0 0 2"
