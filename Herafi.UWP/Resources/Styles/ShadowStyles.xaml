    <Style x:Key="TabViewItemShadow" TargetType="cont:DropShadowPanel">
        <Setter Property="Color" Value="{ThemeResource TabViewItemShadowColor}"/>
        <Setter Property="OffsetX" Value="{StaticResource TabViewItemShadowOffsetX}"/>
        <Setter Property="OffsetY" Value="{StaticResource TabViewItemShadowOffsetY}"/>
        <Setter Property="ShadowOpacity" Value="{StaticResource TabViewItemShadowOpacity}"/>
        <Setter Property="BlurRadius" Value="{StaticResource TabViewItemShadowBlurRadius}"/>
    </Style>

    
    <!--Normal refuse, accept buttons shadow styles-->
    <Style x:Key="NormalButtonShadow" TargetType="cont:DropShadowPanel">
        <Setter Property="Color" Value="{ThemeResource NormalButtonShadowColor}"/>
        <Setter Property="OffsetX" Value="{StaticResource ButtonShadowOffsetX}"/>
        <Setter Property="OffsetY" Value="{StaticResource ButtonShadowOffsetY}"/>
        <Setter Property="ShadowOpacity" Value="{StaticResource ButtonShadowOpacity}"/>
        <Setter Property="BlurRadius" Value="{StaticResource ButtonShadowBlurRadius}"/>
