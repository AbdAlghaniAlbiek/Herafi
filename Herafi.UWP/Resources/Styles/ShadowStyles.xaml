<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cont="using:Microsoft.Toolkit.Uwp.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///Resources/ConstValues/ShadowValues.xaml"/>
        <ResourceDictionary Source="ms-appx:///Resources/Brushes/ShadowBrushes.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="SignInShadow" TargetType="cont:DropShadowPanel">
        <Setter Property="Color" Value="{ThemeResource NormalShadowColor}"/>
        <Setter Property="OffsetX" Value="{StaticResource SignInMainShadowOffsetX}"/>
        <Setter Property="OffsetY" Value="{StaticResource SignInMainShadowOffsetY}"/>
        <Setter Property="ShadowOpacity" Value="{StaticResource SignInMainShadowOpacity}"/>
        <Setter Property="BlurRadius" Value="{StaticResource SignInMainShadowBlurRadius}"/>
    </Style>

    <Style x:Key="NavigationViewShadow" TargetType="cont:DropShadowPanel">
        <Setter Property="Color" Value="{ThemeResource NormalShadowColor}"/>
        <Setter Property="OffsetX" Value="{StaticResource NavigationViewShadowOffsetX}"/>
        <Setter Property="OffsetY" Value="{StaticResource NavigationViewShadowOffsetY}"/>
        <Setter Property="ShadowOpacity" Value="{StaticResource NavigationViewShadowOpacity}"/>
        <Setter Property="BlurRadius" Value="{StaticResource NavigationViewShadowBlurRadius}"/>
    </Style>

    <Style x:Key="CardShadow" TargetType="cont:DropShadowPanel">
        <Setter Property="Color" Value="{ThemeResource NormalShadowColor}"/>
        <Setter Property="OffsetX" Value="{StaticResource CardShadowOffsetX}"/>
        <Setter Property="OffsetY" Value="{StaticResource CardShadowOffsetY}"/>
        <Setter Property="ShadowOpacity" Value="{StaticResource CardShadowOpacity}"/>
        <Setter Property="BlurRadius" Value="{StaticResource CardShadowBlurRadius}"/>
    </Style> 

    <!--Navigation view item and Tab view item shadow styles-->
    <Style x:Key="NavigationViewItemShadow" TargetType="cont:DropShadowPanel">
        <Setter Property="Color" Value="{ThemeResource NavigationViewItemShadowColor}"/>
        <Setter Property="OffsetX" Value="{StaticResource NavigationViewItemShadowOffsetX}"/>
        <Setter Property="OffsetY" Value="{StaticResource NavigationViewItemShadowOffsetY}"/>
        <Setter Property="ShadowOpacity" Value="{StaticResource NavigationViewItemShadowOpacity}"/>
