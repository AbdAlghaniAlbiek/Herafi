    <Style x:Key="RefuseButtonShadow" TargetType="cont:DropShadowPanel">
        <Setter Property="Color" Value="{ThemeResource RefuseButtonShadowColor}"/>
        <Setter Property="OffsetX" Value="{StaticResource ButtonShadowOffsetX}"/>
        <Setter Property="OffsetY" Value="{StaticResource ButtonShadowOffsetY}"/>
        <Setter Property="ShadowOpacity" Value="{StaticResource ButtonShadowOpacity}"/>
        <Setter Property="BlurRadius" Value="{StaticResource ButtonShadowBlurRadius}"/>
    </Style>

    <Style x:Key="AcceptButtonShadow" TargetType="cont:DropShadowPanel">
        <Setter Property="Color" Value="{ThemeResource AcceptButtonShadowColor}"/>
        <Setter Property="OffsetX" Value="{StaticResource ButtonShadowOffsetX}"/>
        <Setter Property="OffsetY" Value="{StaticResource ButtonShadowOffsetY}"/>
        <Setter Property="ShadowOpacity" Value="{StaticResource ButtonShadowOpacity}"/>
        <Setter Property="BlurRadius" Value="{StaticResource ButtonShadowBlurRadius}"/>
    </Style>

    <!--Microsoft and Facebook buttons shadow style-->
    <Style x:Key="MicrosoftFacebookButtonShadow" TargetType="cont:DropShadowPanel">
        <Setter Property="Color" Value="{ThemeResource NormalShadowColor}"/>
        <Setter Property="OffsetX" Value="{StaticResource MicrosoftFacbookButtonShadowOffsetX}"/>
        <Setter Property="OffsetY" Value="{StaticResource MicrosoftFacbookButtonShadowOffsetY}"/>
        <Setter Property="ShadowOpacity" Value="{StaticResource MicrosoftFacbookButtonShadowOpacity}"/>
        <Setter Property="BlurRadius" Value="{StaticResource MicrosoftFacbookButtonShadowBlurRadius}"/>
    </Style>

    <!--Shadowing text box sahadow style-->
    <Style x:Key="ShadowingTextBoxShadow" TargetType="cont:DropShadowPanel">
        <Setter Property="Color" Value="{ThemeResource NormalShadowColor}"/>
        <Setter Property="OffsetX" Value="{StaticResource ShadowingTextBoxShadowOffsetX}"/>
        <Setter Property="OffsetY" Value="{StaticResource ShadowingTextBoxShadowOffsetY}"/>
        <Setter Property="ShadowOpacity" Value="{StaticResource ShadowingTextBoxShadowOpacity}"/>
        <Setter Property="BlurRadius" Value="{StaticResource ShadowingTextBoxShadowBlurRadius}"/>
    </Style>


</ResourceDictionary>