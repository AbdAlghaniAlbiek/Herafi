<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="GridImageBorderColorLight">#F1F1F1</Color>

    <Color x:Key="GridImageBorderColorDark">#333333</Color>


    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="GridImageBorderBrush" Color="{StaticResource GridImageBorderColorLight}"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="GridImageBorderBrush" Color="{StaticResource GridImageBorderColorDark}"/>

        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
