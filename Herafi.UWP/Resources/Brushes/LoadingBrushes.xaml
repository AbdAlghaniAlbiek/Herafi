<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="LoadingProgressForegroundColorLight">#2B62AB</Color>
    <Color x:Key="LoadingProgressForegroundColorDark">#B9D5FC</Color>


    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="LoadingProgressForegroundBrush" Color="{StaticResource LoadingProgressForegroundColorLight}" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="LoadingProgressForegroundBrush" Color="{StaticResource LoadingProgressForegroundColorDark}" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
